<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_height"
    android:background="#1f2228"
    android:paddingLeft="10dp"
    android:paddingRight="6dp">

    <ImageView
        android:id="@+id/title_left_img_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:src="@drawable/title_back_white"
        android:textColor="@color/white"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title_left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/title_img"
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title_right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="@dimen/title_bar_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="right"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/title_right_img_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/prompt_message"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignEnd="@+id/title_right_img_icon"
            android:layout_alignRight="@+id/title_right_img_icon"
            android:layout_alignTop="@+id/title_right_img_icon"
            android:layout_gravity="right"
            android:background="@drawable/nim_new_message_notify"
            android:textColor="@android:color/white"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>